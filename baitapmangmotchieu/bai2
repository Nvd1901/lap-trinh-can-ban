#include <stdio.h>
void nhapham(int a[],int* n){
    printf("nhap kich thuoc mang ");
    scanf("%d", n);
    printf("nhap mang ");
    for (int i =0;i<*n;i++)
    {
        scanf("%d", &a[i]);
    }
    
    
}

int main()
{
    int n;
    int a[1000];
    nhapham(a,&n);
     
    for (int b =n-1;b>=0;b--)
    {
    printf("%d ", a[b]);
    }


    return 0;
}
